<h1>Create a new Figure</h1>

<form action='/figures' method='post'>

<label for="figure[name]">Name</label>
<input type="text"id='figure_name' name="figure[name]" /> <br />

<h2>Titles</h2>

<%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%=title.id%>"><%=title.name%></input> <br />
<%end%>

<h2> Create New Title:</h2>
<input type="text" name="title[name]" /> <br />

<h2>Landmarks</h2>
<%Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%=landmark.id%>"><%=landmark.name%></input> <br />
<%end%>

<h2> Create New Landmark:</h2>
<label for="landmark[name]">Name</label>
<input type="text" name="landmark[name]" />
<label for="landmark[year_completed]">Year</label>
<input type="text" name="landmark[year_completed]" />

<input type="submit" id="submit" value="Create New Figure">
</form>
